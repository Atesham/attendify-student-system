{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  
    "compilerOptions": {
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "composite": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "skipLibCheck": true,
      "allowJs": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "types": ["react", "react-dom"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }